{ 
  "compilerOptions": { 
    "target": "ES2022", 
    "module": "commonjs", 
    "moduleResolution": "node", 
    "strict": true, 
    "esModuleInterop": true, 
    "resolveJsonModule": true, 
    "types": ["node"], 
    "outDir": "dist", 
    "baseUrl": ".", 
    "paths": { 
      "@pages/*": ["src/pages/*"], 
      "@utils/*": ["src/utils/*"], 
      "@fixtures/*": ["src/fixtures/*"], 
      "@data/*": ["src/data/*"] 
    } 
  }, 
  "include": ["src", "tests", "playwright.config.ts"] 
}